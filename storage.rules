rules_version = '2';

// Service configuration for Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    match /providers/{providerId}/{allPaths=**} {
      // Allow full read, write, and delete access only to the user
      // whose UID matches the providerId folder name.
      allow read, write, delete: if request.auth != null && request.auth.uid == providerId;
    }
  }
}
